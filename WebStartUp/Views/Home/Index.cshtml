@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Sport Shop</h1>
    <p class="lead">Велосипеды, одежда и многое другое</p>
    <p><a href="/Product/ProductList?PageNum=0" class="btn btn-primary btn-lg">Список продуктов &raquo;</a></p>
</div>
<h2>Популярные товары</h2>
<table cellpadding="50" border="0" cellspacing="10" width="100%">
    <tr align="center">
        @foreach (var item in ViewBag.TopProduct)
        {
            <td align="center" height="50" >
                @item.ProductName
            </td >
        }
    </tr>
    <tr>
        @foreach (var item in ViewBag.TopProduct)
        {
            <td align="center" height="50%">
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(item.ThumbNailPhoto) + "\" />")
            </td>
        }
    </tr>
    <tr>
        @foreach (var item in ViewBag.TopProduct)
        {
        <td align="center" height="50%">
            @Html.ActionLink("Подробно", "ShowProduct", "CurrentProduct", new { id = item.ProductID }, null)
        </td>
        }
    </tr>
</table>
