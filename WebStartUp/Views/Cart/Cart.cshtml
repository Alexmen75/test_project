@model IEnumerable<WebStartUp.kaspi.lab.service.CurrentProductDTO>
@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>
<h2>список товаров в корзине</h2>
<table>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                 + Convert.ToBase64String(item.LargePhoto) + "\" />")
        </td>
        <td>
            @Html.Raw(item.ProductName)
    </tr>
}

</table>
