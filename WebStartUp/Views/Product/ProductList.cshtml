@model IEnumerable<AdventureWorks.DataBase.ProductProductPhoto>
@{
    ViewBag.Title = "ProductList";
}

<h2>ProductList</h2>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.Raw(item.Product.Name)
    </td>
    <td>
        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
             + Convert.ToBase64String(item.ProductPhoto.ThumbNailPhoto) + "\" />")
    </td>
    <td>
        @Html.ActionLink("Подробно", "ShowProduct", "CurrentProduct", new { id = item.Product.ProductID }, null);
    </td>
</tr>
    }

</table>
